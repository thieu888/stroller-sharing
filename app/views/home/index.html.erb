<div class="hero-section bg-primary text-white py-5 mb-4">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-3">StrollerShare</h1>
        <p class="lead mb-4">Partagez des poussettes facilement et en toute sécurité dans votre ville</p>
        <div class="d-flex gap-3 flex-wrap">
          <% if user_signed_in? %>
            <button onclick="openQRScanner()" class="btn btn-warning btn-lg">
              <i class="fas fa-qrcode me-2"></i>Scanner QR Code
            </button>
            <%= link_to "Trouver une poussette", stations_path, class: "btn btn-light btn-lg" %>
          <% else %>
            <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-light btn-lg" %>
            <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-light btn-lg" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="text-center">
          <i class="fas fa-baby-carriage fa-8x opacity-75"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mb-5">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="row text-center">
            <div class="col-md-3">
              <div class="stat-item mb-3">
                <h3 class="text-primary fw-bold mb-1"><%= @stations.count %></h3>
                <p class="text-muted mb-0">Stations disponibles</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-item mb-3">
                <h3 class="text-success fw-bold mb-1"><%= @available_strollers_count %></h3>
                <p class="text-muted mb-0">Poussettes disponibles</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-item mb-3">
                <h3 class="text-info fw-bold mb-1">24/7</h3>
                <p class="text-muted mb-0">Service disponible</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-item mb-3">
                <h3 class="text-warning fw-bold mb-1">Écologique</h3>
                <p class="text-muted mb-0">Solution durable</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">Carte des stations</h2>
      <div id="stations-map" style="height: 400px;" class="rounded shadow-sm mb-4"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h3 class="mb-4">Liste des stations</h3>
      <div class="row">
        <% @stations.each do |station| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <div class="card-body">
                <h5 class="card-title text-primary"><%= station.name %></h5>
                <p class="card-text text-muted mb-2">
                  <i class="fas fa-map-marker-alt"></i>
                  Lat: <%= station.gps_lat %>, Lng: <%= station.gps_lng %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge bg-light text-dark">
                    <i class="fas fa-baby-carriage"></i>
                    <%= station.strollers.where(status: 'available').count %>/<%= station.capacity %>
                  </span>
                  <%= link_to "Voir détails", station_path(station), class: "btn btn-sm btn-outline-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialiser la carte des stations
    const stationsMap = new StrollerMap('stations-map', {
      center: [48.8566, 2.3522], // Paris
      zoom: 13
    });
    
    // Ajouter le contrôle de localisation
    stationsMap.addLocationControl();
    
    // Données des stations depuis Rails
    const stationsData = <%= raw @stations_json %>;
    
    // Ajouter les stations à la carte
    stationsData.forEach(station => {
      stationsMap.addStation(station);
    });
    
    // Ajuster la vue pour inclure toutes les stations
    if (stationsData.length > 0) {
      stationsMap.fitBounds();
    }
  });
</script>
