<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><i class="fas fa-spray-can text-info me-2"></i>Enregistrer un nettoyage</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @cleaning, local: true) do |form| %>
            <% if @cleaning.errors.any? %>
              <div class="alert alert-danger">
                <h6>Erreurs:</h6>
                <ul class="mb-0">
                  <% @cleaning.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :stroller_id, "Poussette", class: "form-label" %>
              <% if @stroller %>
                <%= form.hidden_field :stroller_id, value: @stroller.id %>
                <input type="text" class="form-control" value="<%= @stroller.qr_code %>" readonly>
              <% else %>
                <%= form.collection_select :stroller_id, Stroller.all, :id, :qr_code, 
                    { prompt: "Sélectionnez une poussette" }, { class: "form-select" } %>
              <% end %>
            </div>

            <div class="mb-3">
              <%= form.label :cleaning_type, "Type de nettoyage", class: "form-label" %>
              <%= form.select :cleaning_type, 
                  options_for_select([
                    ['Nettoyage rapide', 'quick'],
                    ['Nettoyage complet', 'full'],
                    ['Désinfection', 'disinfection'],
                    ['Lavage en profondeur', 'deep_clean']
                  ]), 
                  { prompt: "Sélectionnez le type" }, 
                  { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= form.label :notes, "Notes (optionnel)", class: "form-label" %>
              <%= form.text_area :notes, 
                  placeholder: "Ajoutez des notes sur le nettoyage...", 
                  class: "form-control", 
                  rows: 3 %>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Enregistrer le nettoyage", class: "btn btn-info" %>
              <%= link_to "Annuler", cleanings_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
